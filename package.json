{
  "name": "localbotify",
  "productName": "LocalBotify",
  "version": "1.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@teeny-tiny/dotenv": "^1.0.10",
    "@xterm/xterm": "^5.5.0",
    "discord.js": "^14.18.0",
    "markdown-wasm": "^1.2.0",
    "request": "^2.88.2",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "localbotify",
    "productName": "LocalBotify",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "assets/favicon.ico",
    "files": [
      "**/*",
      "!./bin/**",
      "!**/*.md",
      "!**/test/**",
      "!**/example/**",
      "!**/LICENSE",
      "!**/license",
      "!**/.github/**",
      "!**/*.bak",
      "!**/*.txt",
      "!**/.vscode/**"
    ],
    "nsis": {
      "installerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
