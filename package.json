{
  "name": "localbotify",
  "productName": "LocalBotify",
  "version": "1.3.0",
  "description": "Because not everyone speaks JavaScript... or Python, or Java.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@teeny-tiny/dotenv": "^1.0.10",
    "@teeny-tiny/open": "^1.1.4",
    "@xterm/xterm": "^5.5.0",
    "discord.js": "^14.18.0",
    "he": "^1.2.0",
    "localbotify": "^2.1.0",
    "localtunnel": "github:lpolish/localtunnel#feature/enhanced-functionality",
    "luxon": "^3.6.1",
    "markdown-wasm": "^1.2.0",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pantry.js": "^1.0.7",
    "shiki": "^3.3.0",
    "socket.io": "^4.8.1",
    "syncstore.json": "^1.0.5",
    "unzipper": "^0.12.3",
    "yahoo-finance2": "^2.12.4",
    "youtube-search-api": "^1.2.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "localbotify",
    "productName": "LocalBotify",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "assets/favicon.ico",
    "files": [
      "**/*",
      "!./bin/**",
      "!**/test/**",
      "!**/example/**",
      "!**/playground/**",
      "!**/LICENSE",
      "!**/license",
      "!**/.github/**",
      "!**/*.bak",
      "!**/.vscode/**"
    ],
    "nsis": {
      "installerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "asarUnpack": [
      "**/node_modules/**",
      "**/tools/node/**/*"
    ]
  }
}
