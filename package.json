{
  "name": "localbotify",
  "productName": "LocalBotify",
  "version": "1.3.0",
  "description": "Because not everyone speaks JavaScript... or Python, or Java.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@teeny-tiny/dotenv": "^1.0.10",
    "@teeny-tiny/open": "^1.1.4",
    "@xterm/xterm": "^5.5.0",
    "discord.js": "^14.18.0",
    "localbotify": "^2.1.0",
    "markdown-wasm": "^1.2.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pantry.js": "^1.0.7",
    "shiki": "^3.3.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "localbotify",
    "productName": "LocalBotify",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "assets/favicon.ico",
    "files": [
      "**/*",
      "!./bin/**",
      "!**/test/**",
      "!**/example/**",
      "!**/playground/**",
      "!**/LICENSE",
      "!**/license",
      "!**/.github/**",
      "!**/*.bak",
      "!**/.vscode/**",
      "!**/tools/**/*"
    ],
    "nsis": {
      "installerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "asarUnpack": [
      "**/node_modules/**",
      "**/tools/${platform}/*"
    ]
  }
}
